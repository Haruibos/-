<% @recipe.each do |recipe| %>
<div>
  <%= link_to recipe_path(recipe.id) do %>
    <%= attachment_image_tag recipe, :image %>
  <% end %>
  <p>投稿ユーザー画像:<%= image_tag('no_image.jpg') %></p>
  <p>レシピ名:<%= recipe.name %></p>
  <P>説明文:<%= recipe.description %></P>
  <p>ユーザーネーム:<%= recipe.user.name %></p>
  <p><%= link_to"#{recipe.comments.count} コメント", recipe_path(recipe.id) %></p>
</div>
<% end %>
<!--kaminari-->
<%= paginate @recipe %>